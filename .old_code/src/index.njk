                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="extension" class="form-label">Extension (optional)</label>
                                    <input type="text" class="form-control" id="extension" name="extension"
                                        autocomplete="tel-extension" pattern="\d*" maxlength="8" placeholder="e.g. 123">
