---
import Base from '../layouts/Base.astro';
---
<Base title="Vulpine Solutions — Smart IT. Silent Security.">
  <section id="home" class="container py-20 md:py-28 grid gap-10 md:grid-cols-2 items-center">
    <div class="space-y-6">
      <h1>Security-first IT for growing teams</h1>
      <p>We keep your business online, secure, and compliant — quietly.</p>
      <div class="flex gap-3">
        <a href="#contact" class="btn-primary">Get in touch</a>
        <a href="#services" class="inline-flex items-center text-white/80 hover:text-white">See services →</a>
      </div>
    </div>
    <div class="rounded-2xl bg-gradient-to-br from-[--color-brand] to-[--color-brand-ink] min-h-52"></div>
  </section>
</Base>